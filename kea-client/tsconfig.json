{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/api/*": ["./src/api/*"],
      "~/components/*": ["./src/components/*"],
      "~/lib/*": ["./src/lib/*"],
      "~/monaco/*": ["./src/monaco/*"],
      "~/routes/*": ["./src/routes/*"],
      "~/shadcn/*": ["./src/shadcn/*"],
      "~/state/*": ["./src/state/*"],
      "~/utils/*": ["./src/utils/*"],
      "~/*": ["./src/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "noUncheckedIndexedAccess": true
  }
}
